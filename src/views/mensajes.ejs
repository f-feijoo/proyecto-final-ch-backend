<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script src="/socket.io/socket.io.js"></script>
    <script src="../mensajes.js"></script>
    <!-- <script src="moment.js"></script> -->
    <title>Chat</title>
  </head>
  <body>
    <%- include("templates/navbar") %>
    <div class="container mt-5 border border-dark rounded">
        <h1 class="text-center">Chat</h1>
        <br>
        <form onsubmit="return addMessage()">
            <input type="email" name="email" id="email" placeholder="Email" required>
            <br>
            <br>
            <select name="tipo" id="tipo" class="form-select" aria-label="" required>
                <option value="usuario">Usuario</option>
                <option value="sistema">Sistema</option>
            </select>
            <br>
            <br>
            <div id="c-mensajes" class="bg-secondary overflow-auto" style="--bs-bg-opacity: .5; max-height: 250px;"></div>
            <br>
            <br>
            <div class="row">
                <div class="col">            
                    <input type="text" name="text" id="text" placeholder="Mensaje" required>
                    <button type="submit" class="btn btn-primary p-2 m-2">Enviar</button>
                </div>
            </div>
        </form>
    </div>
    <br>
    <br>

    <br />
    <br />
  </body>
</html>
