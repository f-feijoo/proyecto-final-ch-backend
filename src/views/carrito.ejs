<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="/carrito.js"></script>
        <title>Carrito</title>
    </head>
    <body>
        <%- include("templates/navbar")   %>
        <div class="container mt-5">
            <table class="table table-success table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.productos.map((x) => { %>
                    <tr>
                    <th scope="row"><%= x.nombre %></th>                    
                    <td><img src=<%= x.img %> class="img-fluid" alt="..."></td>
                    <td>$<%= x.precio %></td>
                    <td><form onsubmit="return deleteProd('/api/carritos/<%= idCarrito %>/productos/<%= x.id %>').then(result => {alert(result.message)}).then(document.location.href='/api/productos')">
                        <button class="btn btn-success" name="eliminar">X</button>
                    </form></td>
                    </tr>
                    <% }) %>
                    <tr>
                        <th scope="row">Precio total:</th>
                        <td></td>
                        <td>$<%= precioTotal  %></td>
                        <td><form onsubmit="return deleteCarrito('/api/carritos/<%= idCarrito %>').then(result => {alert(result.message)}).then(document.location.href='/')">
                            <button type="submit" class="btn btn-danger">Eliminar carrito</button>
                          </form></td>                       
                        </tr>
                </tbody>
            </table>
        </div>
        <div class="container mt-5">
            <a class="btn btn-primary" href='/api/carritos/<%= idCarrito %>/productos/finalizar'>Finalizar compra</a>
        </div>
        <br>
        <br>
        <div class="container mt-5">
            
        </div>    
        <br>
        <br><br>
        <br>    
    </body>
    </html>
</html>